---
import BaseLayout from "@base"
const blogs=await Astro.glob('../pages/blog/*.md')




---

<BaseLayout>
<main class="flex flex-row">
    <aside class="basis-1/4 border-lime-100 border-2 m-1">
       
    {blogs.map((x)=><a class="block hover:bg-purple-200 focus:bg-purple-600" href={x.url}>{x.frontmatter.title}</a>)}
   
    </aside>
    <article class="basis-3/4 flex flex-row border-2 border-blue-300 m-1">
        <div class="basis-2/3">
        <slot></slot>
        </div>
        <div id="rightbar" class="basis-1/3"></div>
    </article>
    <button id='one' class="bg-blue-100 p-1 m-1 focus:bg-green-200">1</button>
    <button id='two' class="bg-blue-100 p-1 m-1 focus:bg-green-200">2</button>
</main>
</BaseLayout>
<script is:inline>
const as=document.querySelectorAll('a')
for (let x of as){
    x.onfocus=x.classList.add(bg-yellow-300)
}
</script>